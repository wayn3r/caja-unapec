CREATE TABLE empleados (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255) NOT NULL,
    cedula VARCHAR(10) NOT NULL,
    tanda_labor ENUM('Matutina', 'Vespertina', 'Nocturna') NOT NULL,
    fecha_ingreso DATE NOT NULL,
    estado ENUM('Activo', 'Inactivo') NOT NULL
);
<?php
// Conexión a la base de datos (reemplaza con tus propias credenciales)
$servername = "localhost";
$username = "tu_usuario";
$password = "tu_contraseña";
$dbname = "nombre_de_tu_base_de_datos";

$conn = new mysqli($servername, $username, $password, $dbname);

if ($conn->connect_error) {
    die("La conexión a la base de datos ha fallado: " . $conn->connect_error);
}

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nombre = $_POST["nombre"];
    $cedula = $_POST["cedula"];
    $tanda_labor = $_POST["tanda_labor"];
    $fecha_ingreso = $_POST["fecha_ingreso"];
    $estado = $_POST["estado"];

    $sql = "INSERT INTO empleados (nombre, cedula, tanda_labor, fecha_ingreso, estado) VALUES ('$nombre', '$cedula', '$tanda_labor', '$fecha_ingreso', '$estado')";

    if ($conn->query($sql) === TRUE) {
        echo "Empleado creado con éxito";
    } else {
        echo "Error al crear el empleado: " . $conn->error;
    }
}

$conn->close();
?>
<?php
// Conexión a la base de datos (reemplaza con tus propias credenciales)
$servername = "localhost";
$username = "tu_usuario";
$password = "tu_contraseña";
$dbname = "nombre_de_tu_base_de_datos";

