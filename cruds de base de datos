CREATE TABLE clientes (
    id INT AUTO_INCREMENT PRIMARY KEY,
    nombre VARCHAR(255) NOT NULL,
    tipo_cliente ENUM('Estudiante', 'Empleado', 'Profesor') NOT NULL,
    carrera VARCHAR(255),
    f_registro DATE NOT NULL,
    estado ENUM('Activo', 'Inactivo') NOT NULL
);
<?php
// Conexión a la base de datos (reemplaza con tus propias credenciales)
$servername = "localhost";
$username = "tu_usuario";
$password = "tu_contraseña";
$dbname = "nombre_de_tu_base_de_datos";

$conn = new mysqli($servername, $username, $password, $dbname);

if ($conn->connect_error) {
    die("La conexión a la base de datos ha fallado: " . $conn->connect_error);
}

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $nombre = $_POST["nombre"];
    $tipo_cliente = $_POST["tipo_cliente"];
    $carrera = $_POST["carrera"];
    $f_registro = $_POST["f_registro"];
    $estado = $_POST["estado"];

    $sql = "INSERT INTO clientes (nombre, tipo_cliente, carrera, f_registro, estado) VALUES ('$nombre', '$tipo_cliente', '$carrera', '$f_registro', '$estado')";

    if ($conn->query($sql) === TRUE) {
        echo "com.unapec.cajaunapec.entities.Cliente creado con éxito";
    } else {
        echo "Error al crear el cliente: " . $conn->error;
    }
}

$conn->close();
?>
<?php
// Conexión a la base de datos (reemplaza con tus propias credenciales)
$servername = "localhost";
$username = "tu_usuario";
$password = "tu_contraseña";
$dbname = "nombre_de_tu_base_de_datos";

