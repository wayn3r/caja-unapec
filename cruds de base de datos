$result = $conn->query($sql);

if ($result->num_rows > 0) {
    while ($row = $result->fetch_assoc()) {
        echo "ID: " . $row["id"] . " - Nombre: " . $row["nombre"] . " - Tipo de com.unapec.cajaunapec.entities.Cliente: " . $row["tipo_cliente"] . " - Carrera: " . $row["carrera"] . " - Fecha de Registro: " . $row["f_registro"] . " - Estado: " . $row["estado"] . "<br>";
    }
} else {
    echo "No hay clientes registrados";
}

$conn->close();
?>
